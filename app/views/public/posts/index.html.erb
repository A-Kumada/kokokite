<div class="container">
  <div class="row">
    <div class="col-md-12 offset-md-3">
      <div class="d-flex">
      <% @posts.each do |post| %>
        <div class="rounded pb-4 pr-4">
          <%#= link_to post_path(post) do %>
          <%#= image_tag post.get_image(180,180) %>
          <%# end %>
          <%= post.title %><br>
          <%= post.point %>
        <div>
      <% end %>
      </div>
    </div>
  </div>
</div>

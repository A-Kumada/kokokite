<%= render 'public/posts/list', categories: @categories, tag_lists: @tag_lists,  tags: @tags%>

    <div class="col-md-8">

      <% @posts.each do |post| %>
      <div class="d-flex border-bottom offset-1 pl-3">
        <div class="mt-3 mb-3">
        <table>
          <tr>
            <td>
              <%#= image_tag post.get_image(100,100) %>
              <% if post.image.attached? %>
                <%= image_tag post.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <%end %>
            </td>
            <td class="pl-4">
              <%= link_to post_path(post),class: "text-primary font-weight-bold font-size" do %>
                <%= post.title %><br>
              <% end %>

              <%= post.outline.truncate(60) %><br>
              <%= link_to "â™¡#{post.favorites.count}", post_path(post.id),class: "text-danger pr-3" %><%= post.status_i18n %>
            </td>
        </table>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>

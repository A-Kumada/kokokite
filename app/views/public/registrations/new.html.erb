<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
  <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <h4 class="font-weight-bold pt-3 offset-3">新規会員登録</h4>
      <div class="pt-4 pb-3 new-user-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :nickname, :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :氏名（全角カナ） %><br>
          <%= f.text_field :name_kana, :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :エリア %></br>
          <%= f.select :area, User.areas, {}, {class: 'area'} %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "new-password", :size=>"30" %>
        </div>

        <div class="field pb-4">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"30" %>
        </div>

        <div class="actions offset-2 pl-4">
          <%= f.submit "無料会員登録", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <h6 class="pb-5 pt-2 text-center">会員登録されている方は<%= link_to "こちら", new_user_session_path %>からログインしてくだい</h6>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h4 class="pl-5">ログイン</h4>
        <h5 class="font-weight-bold pt-3 offset-3">会員登録がお済みの方</h5>
        <div class="pt-4 pb-3 login-center">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :"メールアドレス" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード" %></br>
            <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>
          </div>

          <div class="actions offset-3 pt-2">
            <%= f.submit "ログイン",class:"btn btn-success pl-5 pr-5" %>
          </div>

        <% end %>
        <br><br>

        <h6 class="pb-2 text-center">まだ会員登録されていない方は<%= link_to "こちら", new_user_registration_path %></h6>

        <%#= render "public/shared/links" %>
        <span class="pl-5 pb-5">※会員登録は無料です</span><br><br>

      </div>
    </div>
  </div>
</div>
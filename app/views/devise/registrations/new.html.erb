<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h4>新規会員登録</h4>
      <div class="offset-4 pt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :nickname, :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :氏名（カナ） %><br>
          <%= f.text_field :name_kana, :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"30" %>
        </div>

        <div class="field">
          <%= f.label :エリア %></br>
          <%= f.select :area, User.areas, {}, {class: 'area'} %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "new-password", :size=>"30" %>
        </div>

        <div class="field pb-4">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"30" %>
        </div>

        <div class="actions pb-3">
          <%= f.submit "無料会員登録", class:"btn btn-success w-50" %>
        </div>
        <% end %>

        <%#= render "public/shared/links" %>
         <h6 class="pb-3">会員登録されている方は<%= link_to "こちら", new_user_session_path %>からログインしてくだい</h6>
        </div>
      </div>
    </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="">
        <tr>
          <td class="pb-3" width="200">ユーザーID</td><td class="pb-3"><%= @user.id %></td>
        </tr>
        <tr>
          <td class="pb-3" width="200">ニックネーム</td><td class="pb-3"><%= @user.nickname %></td>
        </tr>
        <tr>
          <td class="pb-3" width="200">氏名カナ</td><td class="pb-3"><%= @user.name_kana %></td>
        </tr>
        <tr>
          <td class="pb-3" width="200">エリア</td><td class="pb-3"><%= @user.area %></td>
        </tr>
        <tr>
          <td class="pb-3" width="200">メールアドレス</td><td class="pb-3"><%= @user.email %></td>
        </tr>
        <tr>
          <td class="pb-3" width="200">会員ステータス</td>
          <td class="pb-3">
            <% if @user.is_active == true %>
            <%= "有効" %>
            <% else %>
            <%= "退会" %>
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_user_path,class:"btn btn-success" %>

      <%=link_to "投稿一覧", admin_posts_path(user_id: @user.id),class:"btn btn-success" %>
    </div>
  </div>
</div>
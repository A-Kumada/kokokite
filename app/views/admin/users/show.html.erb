<div class="container">
  <div class="row">

    <div class="col-md-4 pt-5">
      <h5 class="pb-1 font-weight-bold">
        登録情報
        <%= link_to "編集する", edit_admin_user_path,class:"btn btn-success" %>
      </h5>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary w-25">ユーザーID</td>
          <td class="W-25"><%= @user.id %></td>
        </tr>
        <tr>
          <td class="table-secondary w-25">ニックネーム</td>
          <td class="w-25"><%= @user.nickname %></td>
        </tr>
        <tr>
          <td class="table-secondary">氏名カナ</td>
          <td><%= @user.name_kana %></td>
        </tr>
        <tr>
          <td class="table-secondary">エリア</td>
          <td><%= @user.area %></td>
        </tr>
        <tr>
          <td class="table-secondary">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="table-secondary" width="200">会員ステータス</td>
          <td class="pb-3">
            <% if @user.is_active == true %>
            <%= "有効" %>
            <% else %>
            <%= "退会" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <div class="col-md-8 pt-5">
      <div class="pl-5"><br><br>
      <% @user.posts.each do |post| %>
      <div class="d-flex border-bottom pl-3 pr-3">
        <div class="mt-1 mb-1">
          <table>
            <tr>
              <td>
                <%= link_to admin_post_path(post),class: "text-primary font-weight-bold" do %>
                  <% if post.image.attached? %>
                    <%= image_tag post.image, size: "150x150" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "150x150" %>
                  <% end %>
                <% end %>
              </td>
              <td class="pl-4">
                <%= link_to admin_post_path(post) do %>
                  <span class="post-title"><%= post.title %>
                <% end %> <br>
                <%= post.outline.truncate(30) %> <br><br>
                <span class="pr-3">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </span>
                <%= link_to "♡#{post.favorites.count}", post_path(post.id),class: "text-danger pr-3" %>
                <i class="fas fa-comment-dots"></i><%= link_to post.comments.count, post_path(post.id),class: "text-dark pr-3" %>
              </td>
            </tr>
          </table>
        </div>
      </div> <br>
      <% end %>
      </div>
    </div>
  </div>
</div>

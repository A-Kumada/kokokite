<div class="container">
  <div class="row">
    <div class="col-md-12 offset-md-3">
      <table>
        <tr>
          <td>ユーザーID</td><td><%= @user.id %></td>
        </tr>
        <tr>
          <td>ニックネーム</td><td><%= @user.nickname %></td>
        </tr>
        <tr>
          <td>氏名カナ</td><td><%= @user.name_kana %></td>
        </tr>
        <tr>
          <td>エリア</td><td><%= @user.area %></td>
        </tr>
        <tr>
          <td>メールアドレス</td><td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active == true %>
            <%= "有効" %>
            <% else %>
            <%= "退会" %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to edit_admin_user_path,class:"btn btn-success" do %>編集する
       <% end %>
    </div>
  </div>
</div>
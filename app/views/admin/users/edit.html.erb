<div class="container">

  <div class="row">
    <div class="col-sm-12 pb-5">
      <h4 class="pb-4"><%=@user.nickname %>さんの会員情報</h4>

      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <table>
        <tr><td width="200" class="pb-2"><%= f.label :"会員ID" %></td><td><%= @user.id %></td></tr>
        <tr><td class="pb-2"><%= f.label :"ニックネーム" %></td><td class="pb-2"><%= f.text_field :nickname %></td></tr>
        <tr><td class="pb-2"><%= f.label :"氏名ガナ" %></td><td class="pb-2"><%= f.text_field :name_kana %></td></tr>
        <tr><td class="pb-2"><%= f.label :"エリア" %></td><td class="pb-2"><%= f.select :area, User.areas, {}, {class: 'area'} %></td></tr>
        <tr><td class="pb-3"><%= f.label :"メールアドレス" %></td><td class="pb-3"><%= f.text_field :email %></td></tr>
        <tr><td class="pb-2"><%= f.label :"会員ステータス"%></td>
          <td  class="pb-2">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会" %><br>
          </td>
        <tr class="pt-4"><td>　</td><td class="pt-4"><%= f.submit "変更を保存" ,class:"btn btn-success btn-lg" %></td></tr>
      </table>
    </div>

  <% end %>
  </div>
</div>